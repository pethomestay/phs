%div{ class: "sign-in", name: "#sign-in" }
  %h4 Sign in to talk with this provider
  = form_tag user_session_path, class: "form-vertical" do
    .control-group
      = email_field_tag 'user[email]', '', :placeholder => 'Email'
    .control-group
      = password_field_tag 'user[password]', '', :placeholder => 'Password'
      %br/
    .control-group 
      = check_box_tag 'user[remember_me]'
      Remember me
    .control-group 
      = submit_tag 'Sign in', :class => 'btn small primary'
    .control-group
      = link_to "Forgot your password?", new_user_password_path
  .join-button
    or
    = link_to 'Join us', '#join-us', class: "btn btn-large btn-primary"