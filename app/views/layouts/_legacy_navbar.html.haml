%div.navbar.navbar-fixed-top
  .navbar-inner
    %div{ :class => if @homepage.blank? or !@homepage then 'container' else 'container-home' end }
      - if params[:action] == 'home'
        = link_to "Pet Homestay", root_path, class: "brand large"
      - else
        = link_to "Pet Homestay", root_path, class: "brand"
      - if not user_signed_in?
        %ul.nav
          %li= link_to "Blog", blogit_path
          %li= link_to "Become a Host", why_join_path


      = render partial: 'layouts/navbar_login_dropdown'



