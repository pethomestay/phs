%ul.nav.pull-right
  - unless user_signed_in?
    %li.login-dropdown
      %a.behaviour-popup-trigger{:href => '#'} Login
      .popup.popover.bottom
        .popover-inner

          = form_tag user_session_path, class: "well" do
            = link_to "Sign in with Facebook", user_omniauth_authorize_path(:facebook), class: 'btn-facebook-sign-in'
            = email_field_tag 'user[email]', '', :placeholder => 'Email'
            = password_field_tag 'user[password]', '', :placeholder => 'Password'
            %label.checkbox
              = check_box_tag 'user[remember_me]', 'user[remember_me]', true # Checked by default
              Remember me
            = submit_tag 'Sign in', :class => 'btn btn-primary'
            .divider
            = link_to "Forgot your password?",  new_user_password_path
    %li.cta= link_to "Sign Up", new_user_registration_path, class: 'btn btn-mini btn-primary'
  - else
    - if current_user.admin?
      %li= link_to "Admin Dashboard", admin_dashboard_path
    %li= link_to "Browse Hosts", root_path
    %li= link_to "Blog", blogit_path
    - if current_user.notifications?
      %li.cta
        %a.btn.btn-mini.btn-primary{href: my_account_path}
          My Account
          %span.notification{title: 'You have notifications waiting'} !
    - else
      %li.cta= link_to "My Activity", my_account_path, class: 'btn btn-mini btn-primary'
    %li
      = link_to "Sign out", destroy_user_session_path, method: :delete
