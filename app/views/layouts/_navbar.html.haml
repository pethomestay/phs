%div.navbar.navbar-fixed-top
  .navbar-inner
    .container
      = link_to "Pet Homestay", root_path, class: "brand"
      %ul.nav
        %li
          = link_to "How it works", 'how-it-works'
      %ul.nav.pull-right
        - unless signed_in?
          %li.login-dropdown
            %a.dropdown-toggle{:href => '#', :'data-toggle' => 'dropdown'} Sign in
            .dropdown-menu
              = form_tag user_session_path, class: "well" do
                = email_field_tag 'user[email]', '', :placeholder => 'Email'
                = password_field_tag 'user[password]', '', :placeholder => 'Password'
                %label.checkbox
                  = check_box_tag 'user[remember_me]'
                  Remember me
                = submit_tag 'Sign in', :class => 'btn small primary'
                .divider
                = link_to "Forgot your password?", new_user_password_path
        - else
          %li
            = link_to "Sign out", destroy_user_session_path, method: :delete
