!!!
%html
  %head
    = favicon_link_tag 'favicon.ico'
    %title= formatted_title(@title)
    = javascript_include_tag 'dashboard/dashboard', :async => !Rails.env.development?
    = stylesheet_link_tag 'dashboard/layout'
    = csrf_meta_tags
  %body

    .primary-nav
      .container
        .phs-title
          = image_tag 'favicon.ico'
          = image_tag '/phs-logo.svg'
        .search-form
          %i.icon.ion-android-search
          .field= text_field 'address',nil, class: 'field-input', placeholder: 'search address'

        %nav.customer-center
          %h1.-profile.dropdown
            .dropdown-button
              = image_tag 'favicon.ico', size: '34x34', class: 'avatar'
              .username Alba
              %i.icon.ion-arrow-up-b
            %ul.dropdown-menu.dropdown-select
              %li profile
              %li notifications
              %li payments


          %h1.-notification.dropdown
            .dropdown-button
              %i.icon.ion-ios7-bell
            %ul.dropdown-menu.dropdown-select
              %li Dropdown Menu Item
              %li Another Item
              %li Item Three
              %li The Last One
            
          %h1.-coupon Give $10, Get $10

    .second-nav
      =link_to 'Activity',"#", :class=> "main-tab active"
      =link_to 'My Pets',"#", :class=> "main-tab"
      =link_to 'My Services',"#", :class=> "main-tab"
      .main-tab.pull-right.dropdown
        .dropdown-button
          %i.icon.ion-ios7-calendar-outline
          %i.icon.ion-arrow-up-b
        .dropdown-menu
          .datepicker


    .welcome-bar 
      .container
        .avatar-container
          = image_tag 'favicon.ico', class: "avatar"
        .text-container
          %h2 Andrew — we need your emergency contact details.
          .welcome-text What happens if something goes wrong while you’re away?
          =link_to "link in the welcome bar", "#"
        .slider-container
          .slider
            =render 'shared/dashboard/slide_content', booked_days: 2
            -render 'shared/dashboard/slide_content', booked_days: 12
            -render 'shared/dashboard/slide_content', booked_days: 22

    = yield
    .footer 
      = render 'shared/dashboard/footer'




