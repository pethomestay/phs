.calendar-container
  h4 Calendar

  .switcher.center-block
    i.fa.fa-chevron-left.left
    span.current-month Loading..
    i.fa.fa-chevron-right.right

  table.table.calendar
    thead
      tr
        - for day in ['SUN', 'MON', 'TUE', 'WED', 'THU', 'FRI', 'SAT']
          th #{day}
    tbody

.upcoming
  .day-section
    - month = Date.today.strftime('%b')
    - day   = Date.today.strftime('%d')
    = render 'pages/dashboard/date_widget', { month: month, day: day }
    .events
      .event.booking.accepted
        span.type Accepted
        span.period
          strong.start 9:00 am
          |  to
          strong.end  19 Sept 2014 2:00 pm
        span.name Mike Dekker
      .hr
      .event.inquiry
        span.type Inquiry
        span.period
          strong.start 9:00 am
          |  to
          strong.end  2:00 pm
        span.name Frankie Ratford
    .hr
