.page-header
  %h1= "Leave feedback for #{@subject.first_name}"
= form_for @rating, url: enquiry_rating_path(@enquiry) do |f|
  .row
    .span6{style: 'padding-top:30px'}
      %p.tc= "How would you rate the way #{@subject.first_name} handled this booking?"
      .rater
        - rating_stars 0
    .span6
      %textarea.review-text.span6{placeholder: "Type your review here...", rows: 6}
