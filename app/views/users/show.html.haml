.row.my-account
  .span8
    %h1.page-header My Account
    %h3 Manage details
    .row
      .span6
        %p
          Had a change of email or name? Want to change your password?
          %br
          Update these here!
      .span2.pull-right
        = link_to "Update details", edit_user_registration_path, class: 'btn'
    %hr
    = render partial: 'hotel_link'
    = render partial: 'sitter_link'
    .row
      .span6
        %h4 Close my Pet Homestay account
      .span2.pull-right
        = link_to "Close account", edit_user_registration_path, class: 'btn btn-danger btn-mini'
  .span4.notifications
    %h2.page-header Notifications
    - if @user.enquiries.present?
      - @user.enquiries.each do |enquiry|
        %p.pull-left= link_to "#{enquiry.provider_type} enquiry: #{enquiry.user.name}", enquiry
        %p.pull-right #{enquiry.created_at.to_formatted_s(:day_and_month)}
        .clear
        %hr
    - else
      You have no new notifications!
