%form.center-block.form-inline.search-form{role: "form", action: "#{homestays_path}", method: "get"}
    .form-group#postcode
        .input-group.input-group-lg.left-merged
            %span.input-group-addon
                %i.fa.fa-map-marker
            %input.form-control{type: "text", name: "search[location]", placeholder: "City or Postcode", 'data-toggle' => 'popover', 'data-placement' => 'top', 'data-trigger' => 'manual', 'data-container' => 'body', 'data-content' => 'Please tell us where to search :)'}
    .form-group#drop-off
        .input-group.input-group-lg.right-merged
            %input.form-control{type: "text", name: "search[check_in_date]", placeholder: "Drop Off", readonly: "", style: "cursor: pointer;"}
            %span.input-group-addon
                %i.fa.fa-calendar
    .form-group#pick-up
        .input-group.input-group-lg.right-merged
            %input.form-control{type: "text", name: "search[check_out_date]", placeholder: "Pick Up", readonly: "", style: "cursor: pointer;"}
            %span.input-group-addon
                %i.fa.fa-calendar
    %button#search-btn.btn.btn-lg{type: "submit"} SEARCH
