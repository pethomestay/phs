%form.center-block.form-inline#host-search-form{role: "form"}
    .form-group#postcode
        .input-group.input-group-lg.left-merged
            %span.input-group-addon
                %span.glyphicon.glyphicon-map-marker
            %input.form-control{type: "text", placeholder: "City or Postcode"}
    .form-group#drop-off
        .input-group.input-group-lg.right-merged
            %input.form-control{type: "text", placeholder: "Drop Off"}
            %span.input-group-addon
                %span.glyphicon.glyphicon-calendar
    .form-group#pick-up
        .input-group.input-group-lg.right-merged
            %input.form-control{type: "text", placeholder: "Pick Up"}
            %span.input-group-addon
                %span.glyphicon.glyphicon-calendar
    %button#search-btn.btn.btn-lg{type: "submit"} SEARCH
