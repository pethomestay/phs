.span4.fixed.sidebar-search
  = twitter_bootstrap_form_for @search, method: 'GET' do |f|
    = f.hidden_field :latitude
    = f.hidden_field :longitude
    .well.form-well
      = f.text_field :location, :add_on => :append do
        %button.btn.btn-primary{type: "submit"} Search
        %label.sort-by
          Sort by
          %label.radio.inline
            = radio_button :search, :sort_by, 'distance'
            Distance
          %label.radio.inline
            = radio_button :search, :sort_by, 'cost_per_night'
            Cost
          %label.radio.inline
            = radio_button :search, :sort_by, 'average_rating'
            Rating
      = f.label 'Your pet prefers' do |controls|
        = controls.check_box :hotel?, 'To sleep over at a hotel', name: 'search[provider_types][hotel]'
        = controls.check_box :sitter?, 'To stay at home with a sitter', name: 'search[provider_types][sitter]'
      = f.label 'Your pet is' do |controls|
        = controls.check_box :hotel?, 'Small', name: 'search[sizes][small]'
        = controls.check_box :hotel?, 'Medium', name: 'search[sizes][medium]'
        = controls.check_box :hotel?, 'Large', name: 'search[sizes][large]'
