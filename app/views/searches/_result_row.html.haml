%tr.listing
  %td.image-cell
    - if provider.pictures.present?
      = link_to image_tag(provider.pictures.first.file.thumb('380x').url), provider
    - else
      = link_to image_tag("/assets/results-placeholder.png"), provider
    %p.rating
      - if provider.ratings.present?
        - rating_stars provider.average_rating
      - else
        (Not yet rated)
  %td
    %table
      %tr
        %td
          %h2= link_to provider.title, provider
        %td
          %p.cost-per-night
            %strong
              = number_to_currency(provider.cost_per_night)
              per night
          %p.location= provider.location
    %p.excerpt= truncate(provider.description, length: 300)
    %p.view= link_to "View this listing", provider
