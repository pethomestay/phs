.page-header
  %h1= "#{@user.first_name} would like to make a booking"
%table.table.table-striped.table-condensed
  %tr
    %td Start date
    %td= @enquiry.formatted_date
  %tr
    %td Duration
    %td= @enquiry.duration
  %tr
    %td Message
    %td= @enquiry.message
%h2 Pets
- @pets.each do |pet|
  .row
    .span3
      - if pet.pictures.present?
        = image_tag(pet.pictures.first.file.thumb('220x').url)
      - else
        Pet has no images.. put a placeholder image here.
    .span9
      %table.table.table-striped.table-condensed
        %tr
          %td Name
          %td= pet.name
        %tr
          %td Type
          %td= pet.pet_type.capitalize
        %tr
          %td Age
          %td= pet.age
        %tr
          %td Size
          %td= pet.size
        %tr
          %td Sex
          %td= pet.sex
        %tr
          %td Dislikes
          %td= pet.dislikes
        - unless pet.dislikes.blank?
          %tr
            %td More information about dislikes
            %td= pet.explain_dislikes
  .clearfix
.form-actions
  = form_for @enquiry, html: {class: 'form-button'} do |f|
    = f.hidden_field :responded, val: true
    = f.hidden_field :accepted, val: false
    = f.submit "Can't do it", class: 'btn'
  = form_for @enquiry, html: {class: 'form-button'} do |f|
    = f.hidden_field :responded, val: true
    = f.hidden_field :accepted, val: true
    = f.submit "I would like to contact #{@user.first_name}", class: 'btn btn-primary'
