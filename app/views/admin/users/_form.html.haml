= simple_form_for([:admin, @user]) do |f|
  = f.error_notification

  .form-inputs
    =f.input :first_name
    =f.input :last_name
    =f.input :email
    =f.input :password, required: true
    =f.input :date_of_birth, as: :date, start_year: Date.today.year - 110, end_year: Date.today.year - 15, discard_day: false, order: [:day, :month, :year]
    - if not @user.provider.nil?
      =f.input :facebook_location
      =f.input :age_range_min
      =f.input :age_range_max
    =f.input :phone_number
    =f.input :mobile_number
    = f.input :address_1
    = f.input :address_2
    = f.input :address_suburb
    = f.input :address_city
    = f.input :address_postcode
    = f.input :address_country

  .form-actions
    = f.button :submit, class: 'btn btn-primary'
    = link_to 'Cancel', admin_users_path, class: 'btn'
