= link_to 'New User', new_admin_user_path, class: 'btn btn-primary pull-right'
%h1 Listing Users
%table.table
  %tr
    %th Name
    %th Email
    %th Joined
    %th Actions

  - @users.each do |user|
    %tr
      %td= user.name
      %td= user.email
      %td= "#{time_ago_in_words user.created_at} ago"
      %td
        =link_to 'Show', admin_user_path(user)
        =link_to 'Edit', edit_admin_user_path(user)
        =link_to 'Destroy', admin_user_path(user), :method => :delete, :data => { :confirm => 'Are you sure?' }
