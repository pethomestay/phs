%p#notice= notice

%dl.dl-horizontal
  %dt Name
  %dd= @pet.name
  %dt Owner Name
  %dd= @pet.user.name
  %dt Created
  %dd= @pet.created_at
  %dt Type
  %dd= @pet.pet_type_name
  %dt Breed
  %dd= @pet.breed
  %dt Date of birth
  %dd= @pet.date_of_birth
  %dt Sex
  %dd= @pet.sex_name
  %dt Size
  %dd= @pet.size_name

%table.pictures
  %caption Pictures
  - @pet.pictures.each_slice(2) do |pictures|
    %tr
    - pictures.each do |picture|
      %td
        = image_tag(picture.file.thumb('380x300#').url)

= link_to 'Edit', edit_admin_pet_path(@pet), class: 'btn btn-primary'
= link_to 'Back to pet list', admin_pets_path, class: 'btn'
