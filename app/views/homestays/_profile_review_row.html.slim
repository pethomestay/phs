.timeline-entry
  .timeline-stat
    .timeline-icon style="margin-bottom: 5px;"
      - if review.user.profile_photo?
          = cl_image_tag review.user.profile_photo.public_id, crop: :thumb, gravity: :face, radius: :max, format: :png, class: 'img-circle'
      - elsif review.user.uid.present?
        = facebook_profile_image_tag review.user.uid, crop: :thumb, gravity: :face, radius: :max, format: :png, class: 'img-circle'
      - else
        = image_tag 'default_profile_photo.jpg', class: 'img-circle'
    .timeline-time style="color: #5cc1c0; margin-bottom: -3px;"
      = render 'stars', rating: review.rating   
  .timeline-label
    .pad-hor
      .text-lg.text-bold.text-info Reviewed by #{review.user.first_name}
      .text-sm.text-bold.pad-btm #{time_ago_in_words(review.created_at.strftime('%F'))} ago    
      .text-lg #{review.review}

