= javascript_include_tag 'homestays/modal_add_pet'
= stylesheet_link_tag 'homestays/modal_add_pet'
.modal-body
  #flash_error_sign_up role='alert'
  = simple_form_for [:guest, (current_user ? current_user.pets.build : Pet.new)], wrapper: :bootstrap3, :remote => true do |f|        
    #flash_error_with_pet role='alert'
    input type='hidden' value=@homestay.id name='enquiry[homestay_id]'
    .text-center.pad-btm.text-lg.text-thin Tell Us a little about Your Pet  
    .row.text-box-centered style="max-width: 170px; margin-bottom:15px;"
      .col-xs-12
        .dropzone.modal_dropzone_container id="pet_modal_profile_photo_dropzone"
          i.fa.fa-cloud-upload.fa-3x.modal_pet_upload_photo#modal_image_ul style="margin: 50px 35px"
          = hidden_field_tag "pet[profile_photo]"
          = hidden_field_tag "auth_token", "#{form_authenticity_token}"
    .row.text-box-centered  
      .col-xs-12
        = f.input :name, label: false, placeholder: 'Pet Name eg: Fido '
    .row.text-box-centered
      .col-xs-12
        .hidden
          = f.input :pet_type_id, label: nil, collection: ReferenceData::PetType.dog_cat_other, as: :radio_buttons
        .col-xs-6
          .row
            Button.btn.btn-two-tone.btn-block#modal_dog_btn style="height:71px" 
              = image_tag 'homestay/dog56.png', height: 50, width:50, class: 'pull-left'
              .pad-all Dog
        .col-xs-6  
          .row
            Button.btn.btn-two-tone.btn-block#modal_cat_btn style="margin-left:5px; width: 130px;" 
              = image_tag 'homestay/cat19.png', height: 21, width:21, class: 'pull-left'
              span Cat
            Button.btn.btn-two-tone.btn-block#modal_other_btn style="margin-left:5px; width: 130px;"
              = image_tag 'homestay/mouse33.png', height: 21, width:21, class: 'pull-left'
              span Other
      .col-xs-12
        .mar-top.mar-btm
        = f.input :other_pet_type, label: false, placeholder: 'eg: Makaw or Iguana', input_html: {id: 'other_pet_type_text_id'} 
        = f.input :breed, label: false , collection: DOG_BREEDS, input_html: { class: 'chosen-select', multiple:true, data: { placeholder: 'eg: Beagle' } } 
    .row.text-box-centered
      .col-xs-6 style="padding-right: 3px;"
          Button.btn.btn-mint.btn-block#modal_male_desex Male 
      .col-xs-6 style=" padding-left: 2px;"
          Button.btn.btn-mint.btn-block#modal_female_desex Female 
      .col-xs-12 
        .mar-top   
          span.pull-left.col-xs-10.pad-no.text-sm style=" margin-top: -5px;"Check if Entire
          label.pull-right.col-xs-2.pad-no.form-checkbox.form-icon.form-text style="color:#3c3835; margin-right: -25px;"
            input#modal_pet_normal_sex type="checkbox" checked="" 
            .hidden
              = f.input :sex_id, label: 'Sex' , collection: ReferenceData::Sex.all, as: :radio_buttons,include_blank: false
      .slider_con.text-dark style="color:#3c3835"
        .row.text-center
          .col-xs-4.mar-top
            .text-thin Size 
          .col-xs-4.mar-top
            .text-thin Age
          .col-xs-4.mar-top
            .text-thin Energy 
        hr style="margin-top:5px; margin-bottom: 5px;"
        .row.text-center
          .col-xs-4      
            = f.input :size_id, label: false, input_html: { class: 'slider', data: { 'slider-id' => 'size', 'slider-min' => 1, 'slider-max' => 4, 'slider-step' => 1, 'slider-value' => f.object.size_id.present? ? f.object.size_id : 1 } }
          .col-xs-4
            = f.input :pet_age, label: false, input_html: { class: 'slider', data: { 'slider-id' => 'date_of_birth', 'slider-min' => 1, 'slider-max' => 15, 'slider-value' => f.object.try(:pet_age) } }
          .col-xs-4
            = f.input :energy_level, label: false , input_html: { class: 'slider hidden', data: { 'slider-id' => 'energy_level', 'slider-min' => 1, 'slider-max' => 5, 'slider-step' => 1, 'slider-value' => f.object.energy_level.present? ? f.object.energy_level : 3 } } 
    .row.text-box-centered
      = f.submit 'Add Your Pet', class: 'btn btn-mint btn-block submitEnquiry'
  button.pull-left style="margin-top: -30px;"type='button' class='close' data-dismiss='modal'
    .sr-only Close
    i.fa.fa-reply.text-xs 