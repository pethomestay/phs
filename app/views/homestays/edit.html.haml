.page-header
  .pull-left
    %h1
      Update Your PetHomeStay Listing
  .pull-right
    = link_to 'Back to My Account', my_account_path, class: 'btn'
  .clear
= twitter_bootstrap_form_for @homestay, html: {class: 'form-horizontal', multipart: true} do |f|
  = render partial: 'fields', locals: {f: f}
  = f.actions do
    = f.submit 'Update my listing'
