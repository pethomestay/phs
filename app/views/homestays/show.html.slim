.modal.fade#request-modal tabindex='-1' role='dialog' aria-labelledby='request-label' aria-hidden='true'
  .modal-dialog
    .modal-content
      .modal-header
        button type='button' class='close' data-dismiss='modal'
          span aria-hidden='true' &times;
          span.sr-only Close
        h4.modal-title.request-label Modal title
      .modal-body
        = simple_form_for @enquiry, wrapper: :bootstrap3 do |f|
          input type='hidden' value=@homestay.id name='enquiry[homestay_id]'
          .row
            .col-sm-6
              .input-group.input-group-lg.left-merged.enquiry_check_in_date
                span.input-group-addon
                  i.fa.fa-calendar
                = f.input_field :check_in_date, as: :string, readonly: true, placeholder: 'Drop Off', value: ''
            .col-sm-6
              .input-group.input-group-lg.left-merged.enquiry_check_out_date
                span.input-group-addon
                  i.fa.fa-calendar
                = f.input_field :check_out_date, as: :string, readonly: true, placeholder: 'Pick Up', value: ''
          br
          .row
            .col-xs-12
              = f.input :message, placeholder: 'Please blah blah blah blah blah', input_html: { rows: 5, value: @reusable_enquiries.present? ? @reusable_enquiries.first['message'] : '' }
      .modal-footer
        button type='button' class='btn btn-default' data-dismiss='modal' Cancel
        button type='button' class='btn btn-primary' Send

