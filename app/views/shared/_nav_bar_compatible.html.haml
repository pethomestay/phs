.navbar.nav-custom{ role: "navigation" }
    .navbar-inner
        .container
            %a.brand#brand{ href: "#{root_path}" } pet<span style="color: #ea7a28;">home</span>stay
            .navbar-header.pull-right
                - if user_signed_in?
                    - if current_user.admin?
                        = link_to 'ADMIN CONSOLE', admin_dashboard_path, class: 'buttons btn navbar-btn'
                    %a.buttons.btn.navbar-btn#find-a-host{ href: root_path } Find A Host
                    = link_to 'SIGN OUT', destroy_user_session_path, method: :delete, class: 'buttons btn navbar-btn'
                    - if current_user.homestay.present?
                        %a.buttons.btn.navbar-btn.primary{ href: host_path }
                            %i.fa.fa-home
                            HOST VIEW
                    - else
                        %a.buttons.btn.navbar-btn.primary{ href: guest_path }
                            %span#my
                                %i.fa.fa-user
                                MY
                            ACCOUNT
                - else
                    %a.buttons.btn.navbar-btn#become-a-host{ href: why_join_path } BECOME A HOST
                    %a.buttons.btn.navbar-btn{href: new_user_session_path } LOG IN
                    %a.buttons.btn.navbar-btn.primary{href: new_user_registration_path } SIGN UP
