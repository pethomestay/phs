= simple_form_for @account, html: { class: 'form-horizontal' } do |f|
  = f.input :name, label: 'Account Name'
  = f.input :bank, label: 'Bank Name'
  = f.input :bsb, label: 'BSB'
  = f.input :account_number
  = f.input_field :user_id, type: :hidden, value: current_user.id

  .form-actions
    = f.submit 'Save', class: 'btn btn-primary'
