%section.sign-in
  .container
    = render partial: 'shared/flash_messages', locals: {flash: flash}
    .col-md-4.col-md-offset-4.col-sm-6.col-sm-offset-3
      .panel.panel-info
        .panel-heading
          %h3.panel-title Sign In
        .panel-body
          = form_tag session_path(resource_name), method: 'post' do
            .form-group
              = link_to "Sign in with Facebook", user_omniauth_authorize_path(:facebook), class: 'btn-facebook-sign-in'
            .form-group
              .input-group
                %span.input-group-addon
                  %i.fa.fa-envelope.fa-fw
                = email_field_tag 'user[email]', nil, class: 'form-control', placeholder: 'Email'
            .form-group
              .input-group
                %span.input-group-addon
                  %i.fa.fa-lock.fa-fw
                = password_field_tag 'user[password]', nil, class: 'form-control', placeholder: 'Password'
            = submit_tag 'Sign In', class: 'btn btn-primary form-control'
            %label.checkbox-inline
              = check_box_tag 'user[remember_me]', 1, true
              Remember Me
            = link_to 'Forgot Password', new_user_password_path, class: 'pull-right'
