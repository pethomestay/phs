= twitter_bootstrap_form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f|
  = f.fieldset 'Sign in' do
    = f.email_field :email
    = f.password_field :password
    - if devise_mapping.rememberable?
      = f.label '' do |controls|
        = controls.check_box :remember_me, 'Remember me on this computer'
    = f.actions do
      = f.submit "Sign in"
  = link_to 'Forgot my password', new_user_password_path
