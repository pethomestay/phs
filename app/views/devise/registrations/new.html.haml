%section.sign-up
  .container
    .col-md-4.col-md-offset-4.col-sm-6.col-sm-offset-3
      .panel.panel-info
        .panel-heading
          %h3 Sign up in seconds
        .panel-body
          = form_tag registration_path(resource_name), method: 'post' do
            = hidden_field_tag 'signup_path', params[:signup_path]
            .form-group
              %a.btn.btn-facebook-sign-up{href: user_omniauth_authorize_path(:facebook)}
                %i.fa.fa-facebook.fa-fw.fa-lg
                Sign Up with Facebook
            %h6.hr
              %span or
            .form-group
              .row
                .col-xs-6
                  = text_field_tag 'user[first_name]', nil, class: 'form-control', placeholder: 'First Name'
                .col-xs-6
                  = text_field_tag 'user[last_name]', nil, class: 'form-control', placeholder: 'Last Name'
            .form-group
              .input-group
                %span.input-group-addon
                  %i.fa.fa-envelope.fa-fw
                = email_field_tag 'user[email]', nil, class: 'form-control', placeholder: 'Email'
            .form-group
              .input-group
                %span.input-group-addon
                  %i.fa.fa-mobile.fa-fw
                = phone_field_tag 'user[mobile_number]', nil, class: 'form-control', placeholder: 'Mobile'
            %p.help-block We need this because blah blah
            .form-group
              .input-group
                %span.input-group-addon
                  %i.fa.fa-lock.fa-fw
                = password_field_tag 'user[password]', nil, class: 'form-control', placeholder: 'Password'
            .form-group
              = hidden_field_tag 'user[accept_house_rules]', 1
            .form-group
              = hidden_field_tag 'user[accept_terms]', 1
            %p.help-block By clicking the button below, you agree to our house rules for the benefit of the community and terms and conditions.
            = submit_tag 'Sign Up', class: 'btn btn-primary form-control submit'

