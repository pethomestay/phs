%section.sign-up
  .container
    .col-md-4.col-md-offset-4.col-sm-6.col-sm-offset-3
      .panel.panel-info
        .panel-heading
          %h3 Sign up in seconds
        .panel-body
          = form_for resource, as: resource_name, url: registration_path(resource_name) do |f|
            = hidden_field_tag 'signup_path', params[:signup_path]
            .form-group
              %a.btn.btn-facebook-sign-up{href: user_omniauth_authorize_path(:facebook)}
                %i.fa.fa-facebook.fa-fw.fa-lg
                Sign Up with Facebook
            %h6.hr
              %span or
            .form-group
              .row
                .col-xs-6
                  = f.text_field :first_name, class: 'form-control', placeholder: 'First Name'
                .col-xs-6
                  = f.text_field :last_name, class: 'form-control', placeholder: 'Last Name'
            .form-group
              .input-group
                %span.input-group-addon
                  %i.fa.fa-envelope.fa-fw
                = f.email_field :email, class: 'form-control', placeholder: 'Email'
            .form-group
              .input-group
                %span.input-group-addon
                  %i.fa.fa-mobile.fa-fw
                = f.phone_field :mobile_number, class: 'form-control', placeholder: 'Mobile'
            %p.help-block We need this because blah blah
            .form-group
              .input-group
                %span.input-group-addon
                  %i.fa.fa-lock.fa-fw
                = f.password_field :password, class: 'form-control', placeholder: 'Password'
            .form-group
              = f.hidden_field :accept_house_rules, value: 1
            .form-group
              = f.hidden_field :accept_terms, value: 1
            %p.help-block By clicking the button below, you agree to our house rules for the benefit of the community and terms and conditions.
            = f.submit 'Sign Up', class: 'btn btn-primary form-control submit'

