%section.sign-up
  .container
    .col-md-5.col-md-offset-3.col-sm-6
      .panel.panel-info
        .panel-heading
          = image_tag 'home/three_steps/step_three.png'
        .panel-body
          = form_for resource, as: resource_name, url: registration_path(resource_name) do |f|
            = hidden_field_tag :intention, params[:intention]
            = hidden_field_tag 'signup_path', params[:signup_path]
            = hidden_field_tag 'redirect_path', params[:redirect_path]
            .form-group
              %a.btn.btn-facebook-sign-up{href: user_omniauth_authorize_path(:facebook)}
                %i.fa.fa-facebook.fa-fw.fa-lg
                SIGN UP WITH FACEBOOK
            %h6.hr
              %span or
            .form-group
              .row
                .col-xs-6
                  = f.text_field :first_name, class: 'form-control', placeholder: 'First Name'
                .col-xs-6
                  = f.text_field :last_name, class: 'form-control', placeholder: 'Last Name'
            .form-group
              .input-group
                %span.input-group-addon
                  %i.fa.fa-envelope.fa-fw
                = f.email_field :email, class: 'form-control', placeholder: 'Email'
            / .form-group
            /   .input-group
            /     %span.input-group-addon.mobile-icon
            /       %i.fa.fa-mobile.fa-fw.fa-lg
            /     = f.phone_field :mobile_number, class: 'form-control no-right-border', placeholder: 'Mobile Number'
            /     %span.input-group-addon.custom
            /       %i.fa.fa-question-circle{'data-toggle' => 'popover', 'data-content' => "PetHomeStay uses your mobile number to send email & SMS to Guests and Hosts so you can contact each other. Your number is never displayed publicly, we don't use your number for anything else like spam, and we will never pass on your details to 3rd parties.", 'data-placement' => 'auto', 'data-container' => 'body', 'data-trigger' => 'hover click', 'data-template' => '<div class="popover" role="tooltip"><div class="popover-content"></div></div>'}
            .form-group
              .input-group
                %span.input-group-addon
                  %i.fa.fa-lock.fa-fw
                = f.password_field :password, class: 'form-control', placeholder: 'Password'
            .form-group
              = f.hidden_field :accept_house_rules, value: 1
            .form-group
              = f.hidden_field :accept_terms, value: 1
            %br
            = f.submit 'SIGN UP', class: 'btn btn-primary form-control submit'
            %p.help-block.text-center
              %small
                By clicking the button below, you agree to our
                = link_to 'house rules', house_rules_path, target: '_blank'
                and
                = link_to 'terms and conditions', terms_and_conditions_path, target: '_blank'
            %h6.hr
              = link_to new_user_session_path do
                %span Already a PetHomeStay Member? Log in


    .why-sign-up.hidden-xs
      %h2
        Why you'll
        %em love
        PetHomeStay
      %ul
        %li
          Trusted local pet carers
          %p
            %small Every Host is a pet lover like you.
        %li
          One on One Attention
          %p
            %small Your pet is treated like one of the family with every Host.
        %li
          24&times;7 Support & Insurance.
          %p
            %small We are there when you are away.
