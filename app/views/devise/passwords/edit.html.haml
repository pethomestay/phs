= twitter_bootstrap_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put }) do |f|
  = f.fieldset 'Change your password' do
    = f.password_field :password, "New password"
    = f.password_field :password_confirmation, "Confirm new password"
    = f.hidden_field :reset_password_token
    = f.actions do
      = f.submit "Change my password"
