.messages-panel
  .panel-header
    h4 Inbox
  - if @conversations.any?
    - for conversation in @conversations
      = render 'shared/messages/conversation', conversation: conversation
  - else
    .empty-inbox
      - if params[:controller].include? 'guest'
        .h5
          | You have no messages as a Guest!
      - elsif params[:controller].include? 'host'
        .h5
          | You have no messages as a Host!

  .paginator
    = will_paginate @conversations, renderer: BootstrapPagination::Rails
