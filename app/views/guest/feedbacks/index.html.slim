= render layout: 'layouts/user' do
  .panel.panel-default
    .panel-heading.phs-tab-header
      .panel-control
        ul.nav.nav-tabs
          li.active.hidden-sm.hidden-xs
            a href="#reviews-given-tab" data-toggle="tab"
              span Reviews Given
          li.hidden-sm.hidden-xs
            a href="#reviews-received-tab" data-toggle="tab"
              span Reviews Received
          li.hidden-sm.hidden-xs
            a href="#recommendation-tab" data-toggle="tab"
              span Recommendations
          li.active.hidden-md.hidden-lg
            a href="#reviews-given-tab" data-toggle="tab"
              i.fa.fa-share
          li.hidden-md.hidden-lg
            a href="#reviews-received-tab" data-toggle="tab"
              i.fa.fa-reply
          li.hidden-md.hidden-lg
            a href="#recommendation-tab" data-toggle="tab"
              i.fa.fa-heart
    .panel-body.phs-panel-body
      .tab-content
        .tab-pane.fade.in.active id="reviews-given-tab"
          .phs-subtitle
            ' Reviews that you have made as a guest for a host will appear here.
          - @feedbacks.each do |feedback|
            - next unless feedback
            - if feedback.try(:enquiry).try(:booking).try(:bookee) == feedback.try(:subject)
              .parent style="margin-bottom:50px;"
                .panel-heading.feedback-head
                  .panel-title.phs-title
                    .pull-left
                      - if feedback.subject.profile_photo?
                          = cl_image_tag feedback.subject.profile_photo.public_id, crop: :thumb, gravity: :face, radius: :max, format: :png, class: 'img-md img-border img-circle phs-tab-header-picture2x'
                      - elsif feedback.subject.uid.present?
                        = facebook_profile_image_tag feedback.subject.uid crop: :thumb, gravity: :face, radius: :max, format: :png, class: 'img-md img-border img-circle phs-tab-header-picture2x'
                      - else
                        = image_tag 'default_profile_photo.jpg', class: 'img-md img-border img-circle phs-tab-header-picture2x'
                    .pull-left style="margin-top: 10px;"
                      = "#{feedback.enquiry.booking.bookee.homestay.title}'s Homestay"
                      br
                      | Reviewed:
                      = " (#{time_ago_in_words(feedback.created_at)}) ago"
                    .pull-right.text-right
                      | From: 
                      = " #{feedback.enquiry.check_in_date}"
                      br
                      | To: 
                      = " #{feedback.enquiry.check_out_date}"
                      br
                      .feedback-icon
                        i.fa.fa-chevron-down
                .panel-body.feedback-body style="margin-top: 20px;"
                  .row
                    .col-md-2
                      .text-center.pad-all
                        - if feedback.subject.profile_photo?
                          = cl_image_tag feedback.subject.profile_photo.public_id, crop: :thumb, gravity: :face, radius: :max, format: :png, class: 'img-md img-border img-circle phs-tab-header-picture'
                        - elsif feedback.subject.uid.present?
                          = facebook_profile_image_tag feedback.subject.uid crop: :thumb, gravity: :face, radius: :max, format: :png, class: 'img-md img-border img-circle phs-tab-header-picture'
                        - else
                          = image_tag 'default_profile_photo.jpg', class: 'img-md img-border img-circle phs-tab-header-picture'
                    .col-md-8
                      div style="margin: 20px 0 0 0;"
                        = feedback.review

                    .col-md-2.text-center style="margin: 20px 0 0 0;"
                      - if feedback.enquiry.homestay.user.received_feedbacks.present?
                        p.display_inline.rating
                          == rating_stars_awesome feedback.enquiry.homestay.average_rating
                  .row
                    - binding.pry
                    .col-md-12.text-center.pad-all
                      p Had a great Homestay? Love your Host? Then why not spread the word on Facebook or Twitter? It helps out your Host a ton!
                      button.btn.fb-share-btn style='background: #3B5998; color: #f7f7f7;'
                        i.fa.fa-facebook
                          |  SHARE
                      button.btn.twitter-share-btn style='background: #55acee; color: #f7f7f7; margin-left: 20px;'
                        i.fa.fa-twitter
                          |  TWEET
                  = content_for (:head) do
                    meta property='og:title'  content=feedback.enquiry.homestay.title  
                    meta property='og:description' content="I just had a great experience with this homestay and I wholeheartedly want you to experience it for your pets too!"  
                    meta property='og:site_name' content='PetHomeStay' 
                    - if feedback.enquiry.homestay.photos?
                      - img_url = cloudinary_url feedback.enquiry.homestay.photos.first.public_id
                    - elsif feedback.enquiry.homestay.pictures.any?
                      - img_url = feedback.enquiry.homestay.pictures.first.file.remote_url
                    - elsif feedback.enquiry.homestay.user.profile_photo?
                      - img_url = cloudinary_url feedback.enquiry.homestay.user.profile_photo.public_id
                    - elsif feedback.enquiry.homestay.user.uid.present?
                      - img_url = cloudinary_url feedback.enquiry.homestay.user.uid
                    - if img_url.present?
                      meta property="og:image"  content=img_url                
                  - if feedback.private_review?
                    hr
                    .row
                      .col-md-12
                        span Your private comments for
                        strong
                          = " #{feedback.subject.name}:"
                        .text-thin style="margin: 5px 0 15px 15px;"
                          = "#{feedback.private_review}"

        .tab-pane.fade.in id="reviews-received-tab"
          .phs-subtitle
            ' Reviews that you have received as a guest by a host will appear here.
          - @rec_feedbacks.each do |rec_feedback|
            - next unless rec_feedback
            - if rec_feedback.enquiry.booking.booker == rec_feedback.subject
              .parent style="margin-bottom:50px;"
                .panel-heading.feedback-head
                  .panel-title.phs-title
                    .pull-left
                      - if rec_feedback.subject.profile_photo?
