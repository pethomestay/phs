.page-header
  .pull-left 
    %h1 Update My Pet Profile
  .pull-right
    = link_to 'Back to My Pets', pets_path, class: 'btn'
  .clear
= twitter_bootstrap_form_for @pet, html: {class: 'form-horizontal', multipart: true} do |f|
  = render partial: 'fields', locals: {f: f}
  = f.actions do
    = f.submit 'Update my pet profile'
